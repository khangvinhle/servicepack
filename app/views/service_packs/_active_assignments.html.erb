<!-- partial with param -->
<% if !(@assignments.empty?) %>
  <% if @assignments.count > 1 %>
    <p>
      This Service Pack has been assigned for these projects:</p>
    <ul>
      <% @assignments.find_each do |assignment| %>
        <li><%= assignment.project.name %></li>
      <% end %>
    </ul>
  <% else %>
    <p>
      This Service Pack has been assigned for this project:</p>
    <ul>
      <% @assignments.find_each do |assignment| %>
        <li><%= assignment.project.name %></li>
      <% end %>
    </ul>
  <% end %>
<% else %>
  <p>
    This Service Pack is not being assigned to any projects.
  </p>
<% end %>