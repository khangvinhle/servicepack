<div id="rates-input">
  <% (1..@c).each do |i| %>
    <p>
      <label><%= @sh[i-1].name %></label><br/>
      <label for="service_pack[mapping_rates_attributes][<%= i %>][units_per_hour]">Units per hour:</label>
      <input type="number" name="service_pack[mapping_rates_attributes][<%= i %>][units_per_hour]" min="0"/>
      <input type="hidden" name="service_pack[mapping_rates_attributes][<%= i %>][activity_id]" value="<%= @sh[i-1].id %>"/>
    </p>
  <% end %>
</div>