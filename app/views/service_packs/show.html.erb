<%= javascript_include_tag 'service_packs.js', plugin: :openproject_service_packs %>
<%= stylesheet_link_tag 'service_packs', plugin: :openproject_service_packs %>

<h2><%= @service_pack.name %></h2>
 
<div class='grid-container'>
  <div> Total Units: </div>
  <div> <%= @service_pack.total_units %> </div>
  <div> Remained Units: </div>
  <div> <%= @service_pack.remained_units %> </div>
  <div> Started Date: </div>  
  <div> <%= @service_pack.started_date %> </div>
  <div> Expired Date: </div>
  <div> <%= @service_pack.expired_date %> </div>
</div>

<br>
<div class='combine'>
  <div class='rates'>
    <h2>Rates:</h2>

    <ul>
      <% @rates.each do |rate| %>  
        <li> <%= "#{rate.activity.name}: #{rate.units_per_hour} units/hour" %> </li>
      <% end %>
    </ul>
  </div>

  <div class='stat'>
    <button id='view-stat'>View Stat</button>
  </div>

</div>

<%= render partial: 'active_assignments' %>

<%= link_to 'Edit Service Pack', edit_service_pack_path(@service_pack), :class => 'button -alt-highlight' %> 
<%= link_to 'Back to Service Pack home page', service_packs_path, :class => 'button' %>
<% if @service_pack.assigned? %>
  <%= link_to 'Delete', '#', class: 'button destroy blocked', disabled: true %><span id='warnbox'>Please unassign all project(s) first.</span>
<% else %>
  <%= link_to 'Delete', service_pack_path(@service_pack), class: 'button destroy', method: :delete, data: { confirm: 'Are you sure?', disable_with: 'Deleting...'} %>
<% end %>
