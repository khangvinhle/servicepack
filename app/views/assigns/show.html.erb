<% if @service_pack %>
  <div id="sp-display">
    <h3>Service Pack: <strong><%= @service_pack.name %></strong> already assigned to <strong><%= @project.name %>.</strong></h3>
    Activation Date: <%= @service_pack.started_date %>
    Expiration Date: <%= @service_pack.expired_date %>
    Remained: <%= @service_pack.remained_units %>
  </div>
  <br/>
  <%= link_to "Unassign", assigns_unassign_path(@project), method: :post, class: "button" %> <!-- unassign -->
<% else %>
  <div id="sp-assign">
    <h3>No Service Pack is assigned to this project.</h3>
    <%= form_with model: @assignment, url: assigns_assign_path(@project), local: true, method: :post do |f| %>
      Choose a Service Pack to apply:
      <%= f.select :service_pack_id do %>
        <% @assignables.each do |assignable| %>
          <%= content_tag(:option, assignable.name, value: assignable.id) %>
        <% end %>
      <% end %>
      <br/>
      <%= f.submit "Assign a Service Pack" %>
    <% end %>
  </div>
  <div id="sp-content"><!-- todo: ajax --></div>
<% end %>
